{
  "name": "Melanzane",
  "version": "1.0.0",
  "description": "",
  "author": "Ian Chagas Salgado",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "16.x",
    "npm": "8.x",
    "yarn": "1.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --tsc",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch --tsc",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "typeorm:run": "npm run build && npm run typeorm migration:run",
    "typeorm:full:run": "npm run typeorm schema:drop && npm run typeorm:run",
    "lint": "eslint \"{src,apps,libs,test}/**/**/**/*.ts\" --fix",
    "test": "jest --clearCache && jest --watch --detectOpenHandles --runInBand",
    "test:ci": "jest --clearCache && jest  --detectOpenHandles --runInBand 'a'",
    "test:watch": "jest --clearCache && jest --watchAll --runInBand --config ./jest.config.ts",
    "test:cov": "jest --coverage --runInBand",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --watch --runInBand --config ./jest.config.json",
    "test:e2e:watch": "jest --clearCache && jest --watch --runInBand --config ./jest.config.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.5",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^8.4.5",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^8.4.5",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/testing": "^8.4.5",
    "@nestjs/typeorm": "^8.0.4",
    "@types/express": "^4.17.13",
    "@types/supertest": "^2.0.12",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "date-fns": "^2.23.0",
    "dotenv": "^16.0.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^2.7.1",
    "jsonwebtoken": "^8.5.1",
    "nestjs-typeorm-paginate": "^4.0.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^4.4.0",
    "ts-jest": "^28.0.3",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.6",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^17.0.35",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.0",
    "jest-mock-extended": "^2.0.6",
    "jest-spy-object": "^1.4.0",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.3",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.2"
  }
}
