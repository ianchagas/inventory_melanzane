{
  "name": "Inventory",
  "version": "1.0.0",
  "description": "",
  "author": "Ian Chagas Salgado",
  "private": true,
  "license": "",
  "engines": {
    "node": "20.x",
    "npm": "9.x",
    "yarn": "1.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --tsc",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d dist/datasource.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch --tsc -d dist/datasource.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "typeorm:run": "npm run build && npm run typeorm migration:run",
    "typeorm:full:run": "npm run typeorm schema:drop && npm run typeorm:run",
    "lint": "eslint \"{src,apps,libs,test}/**/**/**/*.ts\" --fix",
    "test": "jest --clearCache && jest --watch --detectOpenHandles --runInBand",
    "test:ci": "jest --clearCache && jest  --detectOpenHandles --runInBand 'a'",
    "test:watch": "jest --clearCache && jest --watchAll --runInBand --config ./jest.config.ts",
    "test:cov": "jest --coverage --runInBand",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --watch --runInBand --config ./jest.config.json",
    "test:e2e:watch": "jest --clearCache && jest --watch --runInBand --config ./jest.config.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.1.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.1.0",
    "@nestjs/swagger": "^7.1.2",
    "@nestjs/testing": "^10.1.0",
    "@nestjs/typeorm": "^10.0.0",
    "@types/express": "^4.17.13",
    "@types/supertest": "^2.0.12",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.23.0",
    "dotenv": "^16.0.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^3.5.5",
    "jsonwebtoken": "^9.0.0",
    "nestjs-typeorm-paginate": "^4.0.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.1",
    "typeorm": "^0.3.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.10",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.4",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "29.6.1",
    "jest-mock-extended": "^3.0.4",
    "jest-spy-object": "^1.4.0",
    "prettier": "^3.0.0",
    "supertest": "^6.2.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.1.6"
  }
}
